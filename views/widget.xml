	<Window id="carbon" platform="android">
		<View id="behind">
			<ScrollView id="menu" backgroundColor="red" width="250" left="0" top="0" layout="vertical" />
		</View>

		<View id="wrapper" class="draggable" module="ti.draggable">
			<View id="navigationBar" />
			<View id="content">
				<Label>Hello, I'm Carbon. You're using Android.</Label>
			</View>
		</View>
	</Window>
