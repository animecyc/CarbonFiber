<Alloy>
	<!-- BOF: Android -->
	<Window id="carbon" platform="android">
		<View id="behindWrapper" class="behind">
			<View id="behind" />
		</View>

		<View id="contentWrapper" class="draggable" module="ti.draggable">
			<View id="navigationBar">
				<Icon module="lib/carbonfiber/util.iconic" class="menu-icon" onClick="$.EVENT.revealMenu" />
			</View>

			<View id="content" />
		</View>
	</Window>
	<!-- EOF: Android -->

	<!-- BOF: iOS -->
	<NavigationWindow id="carbon" class="draggable" platform="ios" module="ti.draggable">
		<Window id="content">
			<LeftNavButton>
				<Icon module="lib/carbonfiber/util.iconic" class="menu-icon" onClick="$.EVENT.revealMenu" />
			</LeftNavButton>
		</Window>
	</NavigationWindow>

	<Window id="behind" platform="ios" class="behind" />
	<!-- EOF: iOS -->
</Alloy>