	<NavigationWindow id="carbon" class="draggable" platform="ios" module="ti.draggable">
		<Window id="content">
			<Label>Hello, I'm Carbon. You're using iOS.</Label>
		</Window>
	</NavigationWindow>

	<Window id="behind" platform="ios">
		<ScrollView id="menu" backgroundColor="red" width="250" left="0" top="0" layout="vertical" />
	</Window>
	<!-- EOF: iOS -->
